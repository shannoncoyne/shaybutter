<div class='post'>
	<div class='time'>
		<div class='hanja day'><%= hanja(post.created_at.wday) %></div>
		<span class='month'><%= post.created_at.strftime("%B") %></span><span class='date'><%= post.created_at.strftime("%d") %></span>
	</div>
	<div class='post-left-margin'>
		<div class='subject'>
			<%= link_to post.title, post_path(post) %>
		</div>
		<span class='tag'><a href='#'>#tag</a></span> <span class='tag'><a href='#'>#grapefruit</a></span>
		<div class='post-text'>
			<%= markdown(post.text) %>
      <% if admin_signed_in? %>
        <%= link_to "Edit", edit_post_path(post) %> | 
        <%= link_to "Delete", post, method: :delete,
        data: { confirm: "You sure?" } %>
      <% end %>
    </div>
	</div>
</div>
